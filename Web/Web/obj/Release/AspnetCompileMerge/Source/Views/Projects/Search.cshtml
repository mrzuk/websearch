@model Web.Models.View.SearchModel

@using Web.Helpers;

@{
    ViewBag.Title = "Search";
}


<!-- Middle content section -->


<div class="middle">
    <div class="container">

        <div class="content">

            <div class="row">
                <h2>What are the biggest question today?</h2>
                <p>
                    Search for research projects<br />
                    that make a difference.
                </p>
            </div>
            @using (Html.BeginForm("Search", "Projects", FormMethod.Post, new { }))
            {

                <div class="choose">
                    <div class="row">
                        <div class="col-md-4">Choose a cause:</div>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.CauseId, (SelectList)ViewBag.Cause)
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-4">Choose a subject:</div>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.SubjectId, (SelectList)ViewBag.SuitableSubject)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">Who you are?</div>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.LevelId, (SelectList)ViewBag.Level)
                        </div>
                    </div>
                    <input type="hidden" name="page" id="page" value="1" />
                    <div class="row">
                        <input type="submit" value="Search for projects" class="btn btn-default btn-lg" />
                    </div>
                </div>

            }

            </div>
        </div>
    </div>

            <div id="searchResults">

            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
                @Scripts.Render("~/bundles/jquerajax")
            }
