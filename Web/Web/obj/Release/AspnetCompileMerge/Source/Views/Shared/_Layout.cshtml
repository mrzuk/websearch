
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Research for Good</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body>
    <header class="top" role="header">
        <div class="container">
            <a href='@Url.Action("Search", "Projects")' class="navbar-brand pull-left">
                <img src="~/Content/img/u31.png" />
            </a>
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="glyphicon glyphicon-align-justify"></span>
            </button>
            <nav class="navbar-collapse collapse  pull-right" role="navigation">
                <ul class="navbar-nav nav">
                    <li>@Html.ActionLink("Take on project", "TakeOnAProject", "Projects")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Contact us</a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("Contact", "Home")'>General inquiries</a></li>
                            <li><a href='@Url.Action( "SubmitAProject","Projects")'>Submit a project</a></li>
                            @{ Html.RenderAction("IsAdmin", "Layout"); }
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>
                            @Html.ActionLink("Configurations", "Index", "Configurations")
                        </li>
                    }
                    @Html.Partial("_LoginPartial")
                </ul>
            </nav>
         
        </div>
        @RenderSection("navbar", required: false)
    </header>



    @RenderBody()



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Shared")
    @Html.Partial("~/Views/Shared/_InfoModals.cshtml")

    @RenderSection("scripts", required: false)

    <!-- Site footer -->
    <div class="bottom">
        <div class="container">
            <div class="row">
                <div class="col-xs-4">
                    <a href="#">
                        <img class="img-responsive img1" src="~/Content/img/gpp.png" />
                    </a>
                </div>
                <div class="col-xs-4">
                    <a href="#">
                        <img class="img-responsive img2" src="~/Content/img/eap.png" />
                    </a>
                </div>
                <div class="col-xs-4">
                    <a href="#">
                        <img class="center img-responsive img3" src="~/Content/img/cfea.png" />
                    </a>
                </div>
            </div>

            <div class="row copyright">

                <div class="col-xs-12"><p>Created by EA Poland volunteers</p></div>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jquerajax")
</body>
</html>
