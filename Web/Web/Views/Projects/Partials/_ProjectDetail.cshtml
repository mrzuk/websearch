@model Web.Models.View.ProjectView

<div class="project-list-horizontal">



    <div class="row">
        <div class="col-md-6 project-details-label">Causes:</div>
        <div class="col-md-6 project-details-label">Added by:</div>

    </div>

    <div class="row">
        <div class="col-md-6">@string.Join(", ", Model.CauseCollection.Select(t => t.Description).ToArray())</div>
        <div class="col-md-6">@Html.DisplayFor(model => model.UserName)</div>
    </div>

    <div class="row">
        <div class="col-md-6 project-details-label">Project Area:</div>
        <div class="col-md-6 project-details-label">Description:</div>

    </div>
    <div class="row">
        <div class="col-md-6">@Html.DisplayFor(model => model.ProjectArea)</div>
        <div class="col-md-6">@Html.DisplayFor(model => model.Description)</div>
    </div>

    <div class="row">
        <div class="col-md-6 project-details-label">Specific projects:</div>
        <div class="col-md-6 project-details-label">Impact:</div>

    </div>

    <div class="row">
        <div class="col-md-6">@Html.DisplayFor(model => model.SpecificProjects)</div>
        <div class="col-md-6">@Html.DisplayFor(model => model.Impact)</div>
    </div>

    <div class="row">
        <div class="col-md-6 project-details-label">Skills required:</div>
        <div class="col-md-6 project-details-label">Added date:</div>

    </div>

    <div class="row">
        <div class="col-md-6">@Html.DisplayFor(model => model.Skills)</div>
        <div class="col-md-6">@Html.DisplayFor(model => model.Date)</div>
    </div>


    <div class="row">
        <div class="col-md-6 project-details-label">Level of study:</div>
        <div class="col-md-6 project-details-label">Subject of study:</div>

    </div>

    <div class="row">
        <div class="col-md-6">@string.Join(", ", Model.LevelCollection.Select(t => t.Description).ToArray())</div>
        <div class="col-md-6">@string.Join(", ", Model.SubjectCollection.Select(t => t.Description).ToArray())</div>
    </div>




    @if (Model.SourceLink != null)
    {
        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.SourceLink)
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.SourceLink)
            </div>
        </div>
    }

    @if (Model.SuggestedReading != null)
    {
        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.SuggestedReading)
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.SuggestedReading)
            </div>
        </div>
    }
    @if (Model.SuggestedMethods != null)
    {
        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.SuggestedMethods)
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.SuggestedMethods)
            </div>
        </div>
    }

    @if (Model.InterestedUsers.Count() > 0)
    {
        <div class="row">
            <div class="col-md-3">
                @Html.DisplayNameFor(model => model.InterestedUsers)
            </div>
            <div class="col-md-9">
                @string.Join(", ", Model.InterestedUsers.ToArray())
            </div>
        </div>
    }

</div>