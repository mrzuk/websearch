
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Research for Good</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body>
    <header class="top" role="header">
        <div class="container">
            <a href='@Url.Action("Search", "Projects")' class="navbar-brand pull-left">
                <img src="~/Content/img/u31.png" />
            </a>
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="glyphicon glyphicon-align-justify"></span>
            </button>
            <nav class="navbar-collapse collapse  pull-right" role="navigation">
                <ul class="navbar-nav nav">
                    <li>@Html.ActionLink("Take on a project", "TakeOnAProject", "Projects")</li>
                    <li>@Html.ActionLink("About us", "About", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Contact us</a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("Contact", "Home")'>General inquiries</a></li>
                            <li><a href='@Url.Action( "SubmitAProject","Projects")'>Submit a project</a></li>
                            @{ Html.RenderAction("IsAdmin", "Layout"); }
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>
                            @Html.ActionLink("Configurations", "Index", "Configurations")
                        </li>
                    }
                    
                </ul>
            </nav>
         
        </div>
        @RenderSection("navbar", required: false)
    </header>



    @RenderBody()



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Shared")
    @Html.Partial("~/Views/Shared/_InfoModals.cshtml")

    @RenderSection("scripts", required: false)

    <!-- Site footer -->
    <div class="bottom">
        <div class="container">

            <div class="row copyright">

                <div class="col-xs-11"><p>Designed by <a href="http://apisz.carbonmade.com" target="_blank">Agnieszka Pisz</a>, developed by <a href="http://www.kamilapawlik.pl" target="_blank">Kamila Pawlik</a> and <a href="">Rafał Żukowski</a></p></div>
                
            </div>
            <div class="admin-panel">
                @Html.Partial("_LoginPartial")
            </div>
        
        </div>
       
</div>

    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jquerajax")
</body>
</html>
