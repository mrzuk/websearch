
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Research for Good</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Research for Good", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>
                            <a data-toggle="dropdown" id="projectLink">Projects</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Search", "Search", "Projects")</li>
                                <li>@Html.ActionLink("Create New", "Create","Projects")</li>
                                @{ Html.RenderAction("IsAdmin", "Layout"); }
                            </ul>
                    </li>             
                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Create new account", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                                </li>
                                <li>

                                    @Html.ActionLink("Configurations", "Index", "Configurations")
                                </li>
                            </ul>
                        }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
               
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Research for Good</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Shared")
    @Html.Partial("~/Views/Shared/_InfoModals.cshtml");

    @RenderSection("scripts", required: false)
</body>
</html>
